
class Solution:
    def countOddEven(self, arr):
        # Initialize counts
        odd_count = 0
        even_count = 0
        
        # Iterate through the array
        for num in arr:
            if num % 2 == 0:
                even_count += 1  # Increment even count
            else:
                odd_count += 1   # Increment odd count
        
        # Return the counts in the format [odd_count, even_count]
        return [odd_count, even_count]
